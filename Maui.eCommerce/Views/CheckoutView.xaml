<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.CheckoutView"
             Title="Checkout">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Receipt:" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding Receipt}" FontSize="16" />
            <Button Text="Back to Home" Clicked="GoBackClicked" />
            <Button Text="Finalize Checkout" Clicked="FinalizeClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
